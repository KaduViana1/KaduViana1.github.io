<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("about-info");
      }
    });
  });

  observer.observe(document.querySelector("#about-animation"));

  const observerMobile = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("about-info-mobile");
        }
      });
    },
    {
      threshold: 0,
    },
  );

  observerMobile.observe(document.querySelector("#about-animation-mobile"));
</script>

<style>
  .about-info {
    animation: expand 2s forwards;
  }

  .about-info * {
    opacity: 0;
    animation: showContent 1s 1s forwards;
  }

  .about-info-mobile {
    animation: expand-mobile 3s ease-in-out forwards;
  }

  @keyframes expand {
    0% {
      opacity: 1;
      width: 0;
      height: 0;
      border-width: 2px;
    }
    30% {
      border-width: 2px;
      height: 0;
      width: 1200px;
    }
    70% {
      border-width: 2px;
      width: 1200px;
      height: 650px;
    }
    100% {
      opacity: 1;
      overflow: visible;
      border-width: 2px;
      width: 1200px;
      height: 700px;
    }
  }

  @keyframes expand-mobile {
    0% {
      overflow: hidden;
      max-width: 0;
      max-height: 0;
      border-width: 0;
    }
    30% {
      overflow: hidden;
      border-width: 2px;
      max-height: 0;
      max-width: 800px;
    }
    70% {
      overflow: hidden;
      border-width: 2px;
      max-width: auto;
    }
    100% {
      overflow: visible;
      border-width: 2px;
      width: auto;
      max-height: 2000px;
    }
  }

  @keyframes showContent {
    0% {
      opacity: 0;
    }

    100% {
      opacity: 1;
    }
  }
</style>
